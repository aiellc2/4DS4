#include "define.h"

int main()
{
	int floor_request;

	printf("Start main...\n");

	init_button_irq();
	printf("PB initialized...\n");

	init_counter_irq();
	printf("Counter IRQ initialized...\n");

	init_counter_irq2();
	printf("Counter 2 IRQ initialized...\n");

	IOWR(LED_GREEN_O_BASE, 0, 0x0);
	IOWR(LED_RED_O_BASE, 0, 0x0);

	printf("Switch value: %X\n", (IORD(SWITCH_I_BASE, 0)&0x3FFF) );

	while (1){

		floor_request = IORD(SWITCH_I_BASE, 0);


	}

	return 0;
}
